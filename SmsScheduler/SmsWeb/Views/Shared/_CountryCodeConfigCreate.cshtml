@model ConfigurationModels.CountryCodeReplacement
-
<script src="~/Scripts/jquery-1.8.3.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

@using (Ajax.BeginForm("EditAjax", "CountryCodeConfig", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "CountryCodeConfigDiv"})) {
    @Html.ValidationSummary(true)

    <div class="editor-label">
        @Html.LabelFor(model => model.CountryCode)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.CountryCode)
        @Html.ValidationMessageFor(model => model.CountryCode)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.LeadingNumberToReplace)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.LeadingNumberToReplace)
        @Html.ValidationMessageFor(model => model.LeadingNumberToReplace)
    </div>

    <p>
        <input type="submit" value="Create" />
    </p>
}