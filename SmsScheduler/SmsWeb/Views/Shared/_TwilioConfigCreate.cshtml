@model ConfigurationModels.TwilioConfiguration

<script src="~/Scripts/jquery-1.8.3.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

@using (Ajax.BeginForm("EditAjax", "TwilioConfig", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "TwilioConfigDiv" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TwilioConfiguration</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.AuthToken)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AuthToken)
            @Html.ValidationMessageFor(model => model.AuthToken)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AccountSid)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AccountSid)
            @Html.ValidationMessageFor(model => model.AccountSid)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.From)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.From)
            @Html.ValidationMessageFor(model => model.From)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
