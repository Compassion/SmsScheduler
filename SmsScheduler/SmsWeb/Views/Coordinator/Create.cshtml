@*}*@

<script type="text/javascript">
    $(document).ready(function () {
        $('#newNumber').bind('change, blur', function() {
            addToNumberList($('#newNumber').val());
            $('#newNumber').val("");
        });
    });

    function addToNumberList(number) {
        if ($('li:contains("' + number + '")').length == 0) {
            var input = '<input type="hidden" style="display:none;" value="' + number + '" name="Tags">';
            $('#numbers').append("<li>" + number + input + "</li>");
        }
    }
</script>

<h2>Create</h2>


<div class="editor-label">
    Tags
</div>
<div class="editor-field">
    <input name="newNumber" id="newNumber"/>
</div>
